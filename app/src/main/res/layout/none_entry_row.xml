<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="4dp">

        <!-- Date View -->
        <RelativeLayout
            android:id="@+id/entry_row_date_holder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:padding="0.5dp">

            <!-- Month View -->
            <RelativeLayout
                android:id="@+id/entry_row_month_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent">

                <!-- Month TextView -->
                <TextView
                    android:id="@+id/entry_row_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="November" />


            </RelativeLayout>

            <!-- Month TextView -->
            <TextView
                android:id="@+id/entry_row_dow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entry_row_month_holder"
                android:layout_centerHorizontal="true"
                android:text="Wednesday" />

            <!-- Day TextView -->
            <TextView
                android:id="@+id/entry_row_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entry_row_dow"
                android:layout_centerHorizontal="true"
                android:text="23"
                android:textSize="30sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/entry_row_date_holder">

            <TextView
                android:id="@+id/entry_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Bob Ross"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/entry_row_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entry_row_title"
                android:layout_centerHorizontal="true"
                android:padding="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="Dear diary, today I woke up then I went back to sleep for 16 hours." />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/entry_row_preview"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/entry_row_mic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mic_enabled_24dp" />

                <ImageView
                    android:id="@+id/entry_row_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_video_enabled_24dp" />

                <ImageView
                    android:id="@+id/entry_row_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_photo_enabled_24dp" />

                <ImageView
                    android:id="@+id/entry_row_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_photo_library_enabled_24dp" />

                <ImageView
                    android:id="@+id/entry_row_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_my_location_enabled_24dp" />

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
